<h1>Listing contents</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Desc</th>
    <th>Content</th>
    <th>Type</th>
    <th>Compile</th>
    <th>Status</th>
    <th>Sharability</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contents.each do |content| %>
  <tr>
    <td><%= content.user_id %></td>
    <td><%= content.name %></td>
    <td><%= content.desc %></td>
    <td><%= content.content %></td>
    <td><%= content.type %></td>
    <td><%= content.compile %></td>
    <td><%= content.status %></td>
    <td><%= content.sharability %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

