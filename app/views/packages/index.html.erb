<h5>Listing packages</h5>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Type</th>
    <th>Version</th>
    <th>Access</th>
    <th>How to</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @packages.each do |package| %>
  <tr>
    <td><%= package.name %></td>
    <td><%= package.description %></td>
    <td><%= package.type %></td>
    <td><%= package.version %></td>
    <td><%= package.access %></td>
    <td><%= package.how_to %></td>
    <td><%= link_to 'Show', package %></td>
    <td><%= link_to 'Edit', edit_package_path(package) %></td>
    <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

