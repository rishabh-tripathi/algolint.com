<div class="main" style="width:400px">
  <center><p class="lead m-null" style="font-size:40px;">Join AlgoLint</p></center>  
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
          <div class="login-form">
            <div class="form-group">
              <%= f.email_field :email, :autofocus => true, :class => "form-control login-field", :placeholder => "Enter Email" %>
              <label class="login-field-icon fui-user" for="login-name"></label>
            </div>

            <div class="form-group">
              <%= f.password_field :password, :autocomplete => "off", :class => "form-control login-field", :placeholder => "Password" %>              
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, :autocomplete => "off", :class => "form-control login-field", :placeholder => "Confirm Password" %>              
              <label class="login-field-icon fui-lock" for="login-pass"></label>
            </div>

            <%= f.submit "Get Started", :class => "btn btn-info btn-lg btn-block" %>            
            <a class="login-link" style="font-size:18px;" href="<%= login_user_url %>">Already have account? Login Now</a>
          </div>


<% end %>
</div>
<div class="sp50"></div>
<div class="sp30"></div>
