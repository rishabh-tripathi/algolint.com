<h5>Listing compilers</h5>
<%
   lang = Language.all
   lang_hash = {}
   for l in lang
   lang_hash[l.id] = l
   end
   %>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Language</th>
    <th>Image</th>
    <th>Run config</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @compilers.each do |compiler| %>
  <tr>
    <td><%= compiler.name %></td>
    <td><%= compiler.description %></td>
    <td><%= lang_hash[compiler.language_id].name %></td>
    <td><%= compiler.image_id %></td>
    <td><%= compiler.run_config %></td>
    <td><%= link_to 'Show', compiler %></td>
    <td><%= link_to 'Edit', edit_compiler_path(compiler) %></td>
    <td><%= link_to 'Destroy', compiler, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Compiler', new_compiler_path %>
